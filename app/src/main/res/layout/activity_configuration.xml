<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/greenBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="48dp">


    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- ðŸŒ¡ï¸ Temperatura mÃ­nima -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:src="@drawable/ic_temp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:text="Temperatura mÃ­nima de alerta (Â°C)"
                android:textColor="@color/greenText"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <SeekBar
            android:id="@+id/seekBarTempMin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="10"
            android:min="-10"
            android:progress="0" />

        <TextView
            android:id="@+id/txtTempMinValor"
            android:text="0â€¯Â°C"
            android:textColor="@color/textSecondary"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp" />

        <!-- ðŸ’¨ Viento mÃ¡ximo -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:src="@drawable/ic_wind"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:text="Viento mÃ¡ximo antes de alerta (km/h)"
                android:textColor="@color/greenText"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <SeekBar
            android:id="@+id/seekBarWindMax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="60"
            android:progress="30" />

        <TextView
            android:id="@+id/txtWindMaxValor"
            android:text="30 km/h"
            android:textColor="@color/textSecondary"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp" />

        <!-- ðŸŒ¿ BotÃ³n para guardar -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp">

            <Button
                android:id="@+id/btnGuardarUmbrales"
                android:text="Guardar Preferencias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:backgroundTint="@color/greenPrimary"
                android:drawableStart="@drawable/ic_leafy"
                android:drawablePadding="8dp"
                android:padding="12dp" />
        </FrameLayout>

    </LinearLayout>
</ScrollView>