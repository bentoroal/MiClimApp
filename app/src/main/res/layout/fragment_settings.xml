<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/greenBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 🌍 Ajustes de Ubicación -->
        <TextView
            android:text="🌍 Ajustes de Ubicación"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/greenText"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- 🔘 Switch GPS automático switch -->
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchUbicacionAutomatica"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Activar ubicación automática"
            android:checked="true"
            android:textColor="@color/black"
            android:layout_marginBottom="24dp" />

        <TextView
            android:id="@+id/labelUbicacionManual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccionar ubicación manual"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/textSecondary"
            android:layout_marginBottom="8dp" />


        <!-- 🏙️ Campo de ubicación manual -->
        <AutoCompleteTextView
            android:id="@+id/autocompleteUbicacionManual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej: Temuco, Santiago, Estación Central"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:padding="12dp"
            android:layout_marginBottom="32dp" />

        <!-- 🌿 Configuración de Alertas Climáticas -->
        <TextView
            android:text="🌿 Alertas Climáticas"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/greenText"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- 🔘 Switch para activar/desactivar alertas -->
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchActivarAlertas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Activar alertas de clima"
            android:checked="true"
            android:textColor="@color/black"
            android:layout_marginBottom="24dp" />

        <!-- 🌡️ Temperatura mínima de alerta -->
        <TextView
            android:text="Temperatura mínima de alerta (°C)"
            android:textColor="@color/greenText"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <SeekBar
            android:id="@+id/seekBarTempMin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="10"
            android:min="-10"
            android:progress="0" />

        <TextView
            android:id="@+id/txtTempMinValor"
            android:text="0 °C"
            android:textColor="@color/textSecondary"
            android:textSize="14sp"
            android:layout_marginBottom="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- 💨 Viento máximo antes de alerta -->
        <TextView
            android:text="Viento máximo antes de alerta (km/h)"
            android:textColor="@color/greenText"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <SeekBar
            android:id="@+id/seekBarWindMax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="60"
            android:progress="30" />

        <TextView
            android:id="@+id/txtWindMaxValor"
            android:text="30 km/h"
            android:textColor="@color/textSecondary"
            android:textSize="14sp"
            android:layout_marginBottom="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- 🌿 Botón para guardar -->
        <Button
            android:id="@+id/btnGuardarPreferencias"
            android:text="Guardar Preferencias"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/greenPrimary"
            android:drawableStart="@drawable/ic_leafy"
            android:drawablePadding="8dp"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp" />

    </LinearLayout>
</ScrollView>