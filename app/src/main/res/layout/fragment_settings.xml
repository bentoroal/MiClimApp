<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="?attr/colorSurface"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 🌍 Ajustes de Ubicación -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🌍 Ajustes de Ubicación"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:layout_marginBottom="16dp" />

        <!-- 🔘 Switch GPS automático -->
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchUbicacionAutomatica"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Activar ubicación automática"
            android:checked="true"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginBottom="24dp" />

        <!-- 📍 Ubicación manual -->
        <TextView
            android:id="@+id/labelUbicacionManual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccionar ubicación manual"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:layout_marginBottom="8dp" />

        <AutoCompleteTextView
            android:id="@+id/autocompleteUbicacionManual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej: Temuco, Santiago, Estación Central"
            android:textColor="?attr/colorOnSurface"
            android:textSize="16sp"
            android:padding="12dp"
            android:layout_marginBottom="32dp" />

        <!-- 🌿 Alertas Climáticas -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🌿 Alertas Climáticas"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:layout_marginBottom="16dp" />

        <!-- 🔘 Switch activar/desactivar alertas -->
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchActivarAlertas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Activar alertas de clima"
            android:checked="true"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginBottom="24dp" />

        <!-- 🌡️ Temperatura mínima de alerta -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temperatura mínima de alerta (°C)"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:layout_marginBottom="8dp" />

        <SeekBar
            android:id="@+id/seekBarTempMin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="10"
            android:min="-10"
            android:progress="0" />

        <TextView
            android:id="@+id/txtTempMinValor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 °C"
            android:textSize="14sp"
            android:textColor="?attr/colorPrimary"
            android:layout_marginBottom="24dp" />

        <!-- 💨 Viento máximo antes de alerta -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Viento máximo antes de alerta (km/h)"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:layout_marginBottom="8dp" />

        <SeekBar
            android:id="@+id/seekBarWindMax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="60"
            android:progress="30" />

        <TextView
            android:id="@+id/txtWindMaxValor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30 km/h"
            android:textSize="14sp"
            android:textColor="?attr/colorPrimary"
            android:layout_marginBottom="32dp" />

        <TextView
            android:id="@+id/txtUltimaNotificacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Última notificación: N/A"
            android:visibility="invisible"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginBottom="16dp" />

        <!-- 🌿 Botón para guardar -->
        <Button
            android:id="@+id/btnGuardarPreferencias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar Preferencias"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textColor="?attr/colorOnPrimary"
            android:backgroundTint="?attr/colorPrimary"
            android:drawableStart="@drawable/ic_leafy"
            android:drawablePadding="8dp"
            android:padding="12dp"
            android:layout_marginBottom="32dp" />

    </LinearLayout>
</ScrollView>