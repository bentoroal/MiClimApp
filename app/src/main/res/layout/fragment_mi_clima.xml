                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/txtPronosticoManana"
                    android:text="â˜€ï¸ MaÃ±ana: --Â°C â€“ --Â°C\nðŸ’¨ Viento: -- km/h"
