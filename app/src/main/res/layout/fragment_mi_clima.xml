<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:padding="24dp">

    <!-- 🌡️ Clima actual -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardClimaActual"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="?attr/colorOnPrimary"
        app:strokeColor="?attr/colorOnSurface"
        app:strokeWidth="1dp"
        app:useCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Encabezado dinámico -->
            <TextView
                android:id="@+id/txtTituloClimaHoy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="8dp"
                android:text="Clima de hoy"
                android:textSize="26sp"
                android:textStyle="normal"
                android:textColor="?attr/colorPrimary" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:stretchColumns="*">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3">

                    <ImageView
                        android:id="@+id/imgClimaActualIcon"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:maxHeight="48dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_unknown"
                        android:visibility="invisible" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:orientation="vertical"
                        android:gravity="start">

                        <TextView
                            android:id="@+id/txtTituloTempActual"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="2"
                            android:layout_gravity="center"
                            android:text="Actual"
                            android:textSize="20sp"
                            android:textStyle="normal"
                            android:textColor="?attr/colorOnSurface" />

                        <TextView
                            android:id="@+id/txtTempActual"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="2"
                            android:layout_gravity="center"
                            android:text="🌡--°C"
                            android:textSize="24sp"
                            android:textStyle="normal"
                            android:textColor="?attr/colorOnSurface" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="start|center_vertical">

                        <TextView
                            android:id="@+id/txtTempMin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Min: --°C"
                            android:textSize="12sp"
                            android:textStyle="normal"
                            android:textColor="?attr/colorOnSurface" />

                        <TextView
                            android:id="@+id/txtTempMax"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Max: --°C"
                            android:textSize="12sp"
                            android:textStyle="normal"
                            android:textColor="?attr/colorOnSurface" />

                        <TextView
                            android:id="@+id/txtVientoMax"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Viento -- km/h"
                            android:textSize="12sp"
                            android:textStyle="normal"
                            android:textColor="?attr/colorOnSurface" />
                    </LinearLayout>
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- 🗓 Pronóstico semanal -->
    <TextView
        android:id="@+id/txtSemanalTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Próximos días:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="?attr/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/cardClimaActual"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"/>

    <!-- 📅 RecyclerView semanal -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvForecast"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/txtSemanalTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
