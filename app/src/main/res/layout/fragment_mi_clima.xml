<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="?attr/colorSurface">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- ðŸŒ¡ï¸ Clima actual -->
        <com.google.android.material.card.MaterialCardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cardClimaActual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="?attr/colorSurface"
            app:strokeColor="?attr/colorOnSurface"
            app:strokeWidth="1dp"
            app:useCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- Encabezado dinÃ¡mico -->
                <TextView
                    android:id="@+id/txtTituloClimaHoy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="8dp"
                    android:text="Clima de hoy"
                    android:textSize="24sp"
                    android:textStyle="normal"
                    android:textColor="?attr/colorPrimary" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:stretchColumns="*">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="3">

                        <ImageView
                            android:id="@+id/imgClimaActualIcon"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:maxHeight="48dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_unknown"
                            android:visibility="invisible" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:orientation="vertical"
                            android:gravity="start">

                            <TextView
                                android:id="@+id/txtTituloTempActual"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="2"
                                android:layout_gravity="center"
                                android:text="Actual"
                                android:textSize="20sp"
                                android:textStyle="normal"
                                android:textColor="?attr/colorPrimary" />

                            <TextView
                                android:id="@+id/txtTempActual"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="2"
                                android:layout_gravity="center"
                                android:text="ðŸŒ¡--Â°C"
                                android:textSize="24sp"
                                android:textStyle="normal"
                                android:textColor="?attr/colorPrimary" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="start|center_vertical">

                            <TextView
                                android:id="@+id/txtTempMin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Min: --Â°C"
                                android:textSize="14sp"
                                android:textStyle="normal"
                                android:textColor="?attr/colorOnSurface" />

                            <TextView
                                android:id="@+id/txtTempMax"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Max: --Â°C"
                                android:textSize="14sp"
                                android:textStyle="normal"
                                android:textColor="?attr/colorOnSurface" />

                            <TextView
                                android:id="@+id/txtVientoMax"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Viento -- km/h"
                                android:textSize="14sp"
                                android:textStyle="normal"
                                android:textColor="?attr/colorOnSurface" />
                        </LinearLayout>
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


        <!-- â˜€ï¸ PronÃ³stico de maÃ±ana -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardPronosticoManana"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="?attr/colorSurface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/txtPronosticoHoy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="ðŸŒ¤ï¸ Hoy: --Â°C â€“ --Â°C\nðŸ’¨ Viento: -- km/h"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary" />

                <TextView
                    android:id="@+id/txtPronosticoManana"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="â˜€ï¸ MaÃ±ana: --Â°C â€“ --Â°C\nðŸ’¨ Viento: -- km/h"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ðŸ—“ PronÃ³stico semanal -->
        <TextView
            android:id="@+id/txtSemanalTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PrÃ³ximos dÃ­as:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:layout_marginBottom="8dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvForecast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:layout_marginBottom="24dp"/>
    </LinearLayout>
</ScrollView>