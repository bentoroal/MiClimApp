<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greenBackground"
    android:padding="24dp">

    <!-- 🌿 Título principal -->
    <TextView
        android:id="@+id/txtTitulo"
        android:text="🌱 Cuidado de Plantas"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/greenText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- 🔧 Botón de configuración -->
    <Button
        android:id="@+id/btnConfiguration"
        android:text="⚙️ Configurar Alertas"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/greenPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp"
        android:paddingVertical="12dp"
        app:layout_constraintTop_toBottomOf="@id/txtTitulo"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp" />

    <!-- 📊 Card de resumen -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardResumenUmbrales"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardElevation="6dp"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="@color/greenPrimary"
        app:layout_constraintTop_toBottomOf="@id/btnConfiguration"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="8dp">

        <LinearLayout
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtResumenTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🌿 Valores de Alerta"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/txtResumenUmbrales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cargando valores..."
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardPronosticoManana"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        app:cardElevation="6dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/cardResumenUmbrales"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/txtPronosticoHoy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🌤️ Hoy: --°C – --°C\n💨 Viento: -- km/h"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginBottom="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtPronosticoManana"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="☀️ Mañana: --°C – --°C\n💨 Viento: -- km/h"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>